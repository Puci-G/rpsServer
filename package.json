{
  "name": "rps-monorepo",
  "private": true,
  "workspaces": ["apps/server", "apps/client"],
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.1.0"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "nodemon",
    "dev:client": "npm run dev --prefix apps/client"
  }
}